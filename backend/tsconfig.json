{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "src",
    "resolveJsonModule": true
    // Remove the "types" line
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}